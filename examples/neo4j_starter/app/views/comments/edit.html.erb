<div class="comment-field">
<h3>Edit comment</h3>

<%= form_for [@post, @comment] do |f| %>

  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 6, style:"width: 490px" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>